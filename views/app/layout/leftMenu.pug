//- Sidebar Navigation
aside#sidebar(class="fixed h-screen border border-primary/4 bg-surface-dark/40 shadow-2xl flex flex-col p-4 lg:p-6 z-51 transition-all duration-300 w-20 lg:w-72")

    //- Logo Section (botón en móvil)
    div(class="flex items-center justify-center lg:justify-start gap-3 mb-12 cursor-pointer" id="sidebarToggle")
        div(class="size-10 flex items-center justify-center rounded shrink-0")
            img(src="/img/logos/isotipo.png", alt="")
        div(class="hidden lg:block sidebar-text")
            h1(class="text-white text-xl font-bold tracking-tighter uppercase leading-none") RITMA
            p(class="text-primary/60 text-[10px] uppercase tracking-widest font-bold") #{process.env.APP_VERSION}

    //- Nav Section
    nav(class="space-y-2 sidebar-text")
        -
            const menuItems = [
                {k:'dashboard', i:'dashboard', t:'Panel Principal', h:'./'},
                {k:'users', i:'frame_person', t:'Usuarios y Peticiones', h:'./users'},
                {k:'downloads', i:'cloud_download', t:'Descargas', h:'./downloads'},
                {k:'credits', i:'credit_card_heart', t:'Créditos', h:'./credits'},
                {k:'multimedia', i:'cloud_upload', t:'Upload Multimedia', h:'././multimedia'}
            ];

        each item in menuItems
            - const isActive = active === item.k
            a(
                class=`flex items-center justify-center lg:justify-start gap-3 px-4 py-3 rounded-lg transition-all ${
                    isActive
                        ? 'bg-primary/10 text-primary border border-primary/20'
                        : 'text-white/60 hover:text-white hover:bg-white/5'
                }`
                href=item.h
                title=item.t
            )
                span(class="material-symbols-outlined text-xl") #{item.i}
                h4(class="text-sm font-medium hidden lg:block whitespace-nowrap sidebar-text") #{item.t}

    //- Footer / Logout
    div(class="mt-auto pt-6 border-t border-white/10 sidebar-text")
        form(action="../logout" method="POST" class="w-full")
            input(type="hidden" name="_csrf" value=csrfToken)
            +btnSubmit("close", "close", "Cerrar Sesión", "exit_to_app")
