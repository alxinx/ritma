div(class="space-y-6")
  div(class="glass-card rounded-2xl p-4 flex flex-wrap gap-4 items-center overflow-visible")
    div(class="flex-1 min-w-[200px] relative")
      +ritmaInput("searchMultimedia", "searchMultimedia", type='text', "", required=false, "Filtra por artista, nombre de la canci√≥n o formato", icon='search' , autocompleteType = 'on' )

    div(class="flex gap-4 z-50")
      //- Usando customSelect
      +customSelect("fx-chain", "effect_id", "", "All Formats ", [
          {label: "Todos los formatos", value: "all"},
          {label: "Audio", value: "audio", selected: true},
          {label: "Video", value: "video"}
      ])
      +customSelect("fx-chain", "effect_id", "", "Popularidad", [
          {label: "Todos los formatos", value: "all"},
          {label: "Audio", value: "audio", selected: true},
          {label: "Video", value: "video"}
      ])
      
      +btnSubmit('filter', 'filter', 'Avanzado', 'filter_list')

  div(class="glass-card rounded-3xl z-10 overflow-hidden")
    table(class="w-full text-left border-collapse")
      thead
        tr(class="border-b border-white/5 bg-white/2")
          th(class="px-8 py-5 text-[10px] font-bold text-gray-400 uppercase tracking-widest") Tendencia
          th(class="px-8 py-5 text-[10px] font-bold text-gray-400 uppercase tracking-widest") Artista
          th(class="px-8 py-5 text-[10px] font-bold text-gray-400 uppercase tracking-widest") Album / Video
          th(class="px-8 py-5 text-[10px] font-bold text-gray-400 uppercase tracking-widest") Formato
          th(class="px-8 py-5 text-[10px] font-bold text-gray-400 uppercase tracking-widest text-right") Downloads
          th(class="px-8 py-5 text-[10px] font-bold text-gray-400 uppercase tracking-widest text-center") 
      tbody(class="divide-y divide-white/5 font-mono text-sm")

        tr(class="hover:bg-white/2 transition-colors group")
          td(class="px-8 py-5")
            span(class="material-symbols-outlined trend-up text-xl") trending_up
          td(class="px-8 py-5 font-bold text-white") TechnoVandal
          td(class="px-8 py-5 text-gray-300") Midnight Pulse (Official Video)
          td(class="px-8 py-5")
            span(class="px-2.5 py-1 rounded bg-purple-500/10 text-purple-400 text-[10px] font-bold border border-purple-500/20") MP4
          td(class="px-8 py-5 text-right font-bold text-primary") 45,201
          td(class="px-8 py-5 text-center")
            button(class="opacity-0 group-hover:opacity-100 transition-opacity material-symbols-outlined text-gray-400 hover:text-primary") more_vert

        tr(class="hover:bg-white/2 transition-colors group")
          td(class="px-8 py-5")
            span(class="material-symbols-outlined trend-down text-xl") trending_down
          td(class="px-8 py-5 font-bold text-white") Lofi District
          td(class="px-8 py-5 text-gray-300") Suburban Rain - LP
          td(class="px-8 py-5")
            span(class="px-2.5 py-1 rounded bg-cyan-500/10 text-cyan-400 text-[10px] font-bold border border-cyan-500/20") MP3
          td(class="px-8 py-5 text-right font-bold text-primary") 38,150
          td(class="px-8 py-5 text-center")
            button(class="opacity-0 group-hover:opacity-100 transition-opacity material-symbols-outlined text-gray-400 hover:text-primary") more_vert

        tr(class="hover:bg-white/2 transition-colors group")
          td(class="px-8 py-5")
            span(class="material-symbols-outlined trend-neutral text-xl") horizontal_rule
          td(class="px-8 py-5 font-bold text-white") Neon Shadows
          td(class="px-8 py-5 text-gray-300") Arcade Dreams (Extended Mix)
          td(class="px-8 py-5")
            span(class="px-2.5 py-1 rounded bg-cyan-500/10 text-cyan-400 text-[10px] font-bold border border-cyan-500/20") MP3
          td(class="px-8 py-5 text-right font-bold text-primary") 12,402
          td(class="px-8 py-5 text-center")
            button(class="opacity-0 group-hover:opacity-100 transition-opacity material-symbols-outlined text-gray-400 hover:text-primary") more_vert

        tr(class="hover:bg-white/2 transition-colors group")
          td(class="px-8 py-5")
            span(class="material-symbols-outlined trend-up text-xl") trending_up
          td(class="px-8 py-5 font-bold text-white") HyperBeam
          td(class="px-8 py-5 text-gray-300") Static Velocity 2024
          td(class="px-8 py-5")
            span(class="px-2.5 py-1 rounded bg-purple-500/10 text-purple-400 text-[10px] font-bold border border-purple-500/20") MP4
          td(class="px-8 py-5 text-right font-bold text-primary") 8,922
          td(class="px-8 py-5 text-center")
            button(class="opacity-0  group-hover:opacity-100 transition-opacity material-symbols-outlined text-gray-400 hover:text-primary") more_vert

    div(class="px-8 py-4 bg-black/40 flex items-center justify-between")
      span(class="subtittle tracking-widest") Elementos del 1-4 de 1,280 elementos
      div(class="flex gap-2")
        +btnSubmitMini('anterior', 'anterior', '', 'chevron_left')
        button(class="size-8 rounded bg-primary text-black font-bold text-[10px] flex items-center justify-center") 1
        
        button(class="size-8 rounded bg-white/5 border border-white/10 text-[10px] font-bold flex items-center justify-center hover:bg-white/10 text-white transition-all") 2


        button(class="size-8 rounded bg-white/5 border border-white/10 text-[10px] font-bold flex items-center justify-center hover:bg-white/10 transition-all") 3
        +btnSubmitMini('anterior', 'anterior', '', 'chevron_right')

