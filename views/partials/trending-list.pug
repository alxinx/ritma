section(class="max-w-7xl mx-auto px-6 relative z-10")
  div(class="flex flex-col gap-4")

    //- Definimos los tracks en un array para evitar repetir 300 líneas de código
    - 
      const tracks = [
        { id: '01', title: 'La Villa', artist: 'Ryan Castro', bpm: '128', key: 'Am', time: '03:45', progress: 'w-2/3', color: 'primary', img: '/img/artistas/ryan-castro.webp' },
        { id: '02', title: 'Salsa Tech Core', artist: 'Ritma Labs', bpm: '132', key: 'Gm', time: '04:12', progress: 'w-1/2', color: 'ritma-purple', img: '/img/artistas/ritma-labs.webp' },
        { id: '03', title: 'Cumbia Galáctica', artist: 'Sonido 3000', bpm: '124', key: 'C#', time: '05:20', progress: 'w-3/4', color: 'ritma-blue', img: '/img/artistas/sonido-3000.webp' }
      ]

    each track in tracks
      div(class=`group relative flex flex-col lg:flex-row items-center gap-6 p-1 bg-surface-dark border border-white/10 hover:border-${track.color}/50 transition-all duration-500`)
        
        //- Cover Art & ID
        div(class="relative w-full lg:w-48 h-48 flex-shrink-0 overflow-hidden")
          img(
            src=track.img
            alt=track.title
            class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-700"
          )
          div(class=`absolute top-0 left-0 w-10 h-10 bg-${track.color} flex items-center justify-center text-black font-display font-black text-xl`) 
            | #{track.id}
          
          //- Visualizer decorativo
          div(class="absolute bottom-2 right-2 flex gap-1 items-end h-8 opacity-60")
            each val in [3, 6, 4, 7]
              div(class=`w-1 bg-${track.color}` style=`height: ${val * 4}px`)

        //- Track Info & Waveform
        div(class="flex-grow w-full py-4 px-4 lg:px-0")
          div(class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6")
            div
              h2(class=`font-display font-bold text-2xl uppercase tracking-tighter group-hover:text-${track.color} transition-colors`) 
                | #{track.title}
              p(class=`text-${track.color} font-display font-bold text-xs tracking-[0.3em] uppercase mt-1`) 
                | #{track.artist}

            //- Metadata Grid
            div(class="flex gap-8 mt-6 md:mt-0 font-display text-[10px] uppercase tracking-widest")
              div(class="flex flex-col border-l border-white/10 pl-4")
                span(class="text-slate-500 mb-1") BPM
                span(class="text-white font-black text-sm") #{track.bpm}
              div(class="flex flex-col border-l border-white/10 pl-4")
                span(class="text-slate-500 mb-1") Key
                span(class="text-white font-black text-sm") #{track.key}
              div(class="flex flex-col border-l border-white/10 pl-4")
                span(class="text-slate-500 mb-1") Time
                span(class="text-white font-black text-sm") #{track.time}

          //- Waveform Progress
          div(class="relative h-14 w-full bg-white/5 rounded-sm overflow-hidden group/wave cursor-pointer")
            div(class="absolute inset-0 waveform-bg opacity-20")
            div(class=`absolute inset-0 waveform-bg ${track.progress} group-hover:opacity-80 transition-opacity`)
              //- El hue-rotate dinámico según el color del track
              div(class=`absolute inset-0 bg-${track.color}/20`)

        //- Action Buttons
        div(class="w-full lg:w-64 flex lg:flex-col gap-2 p-4")
          button(class=`flex-grow bg-${track.color} hover:brightness-110 text-black font-display font-black text-[10px] py-4 uppercase tracking-widest transition-all`)
            span(class="material-symbols-outlined text-sm align-middle mr-2") download
            | DOWNLOAD
          
          button(class="flex-grow border border-white/10 hover:bg-white/5 text-white font-display font-bold text-[10px] py-4 uppercase tracking-widest transition-all")
            span(class="material-symbols-outlined text-sm align-middle mr-2") play_arrow
            | PREVIEW
          
          a(href=`/trending-tracks/perreo-futurista` class="flex-grow border border-white/10 hover:bg-white/5 text-white font-display font-bold text-[10px] py-4 uppercase tracking-widest transition-all text-center")
            span(class="material-symbols-outlined text-sm align-middle mr-2") settings_input_component
            | DETAILS

    //- Load More
    div(class="mt-12 flex justify-center")
      button(class="group flex flex-col items-center gap-3 text-[10px] font-bold uppercase tracking-[0.5em] text-slate-500 hover:text-primary transition-all")
        span SCANNING MORE FREQUENCIES
        span(class="material-symbols-outlined animate-bounce text-primary") keyboard_double_arrow_down