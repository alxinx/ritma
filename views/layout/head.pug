    script(src="https://cdn.tailwindcss.com?plugins=forms,typography")

    script.
      tailwind.config = {
        darkMode: "class",
        theme: {
          extend: {
            colors: {
              primary: "#C9DA2B",
              "background-light": "#F8F9FA",
              "background-dark": "#000000",
              "surface-dark": "#1A1A1A",
              "ritma-purple": "#A462A7",
              "ritma-blue": "#4F74B8",
              "ritma-cyan": "#57C5D3",
              "ritma-orange": "#FFC857",
              "ritma-red": "#FF4D4D"
            },
            fontFamily: {
              display: ["Montserrat", "sans-serif"],
              body: ["Roboto", "sans-serif"],
            },
            borderRadius: {
              "DEFAULT": "0.25rem",
              "lg": "0.5rem",
              "xl": "0.75rem",
              "full": "9999px"
            },
          },
        },
      };

    style.
      .vu-meter-item {
        width: 3px;
        background-color: var(--primary-color);
        margin-right: 2px;
        border-radius: 0.5px;
        opacity: 0.4;
      }
      .glow-card { box-shadow: 0 0 40px rgba(201, 218, 43, 0.05); }
      .bg-pattern {
        background-image: radial-gradient(circle at 2px 2px, #1a1a1a 1px, transparent 0);
        background-size: 30px 30px;
      } 
      .pixel-grid {
        background-image: radial-gradient(circle, #333 1px, transparent 1px);
        background-size: 30px 30px;
      }
      .lightning-gradient {
        background: linear-gradient(135deg, #FFC857 0%, #A462A7 100%);
      }

      @layer utilities {
            .pixel-grid {
                background-image: radial-gradient(circle, #222 1px, transparent 1px);
                background-size: 20px 20px;
            }
            .waveform-bg {
